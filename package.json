{
  "name": "@a5gard/bifrost-plugin",
  "version": "1.0.3",
  "description": "Plugin installer / wizard for bifrost projects",
  "type": "module",
  "bin": {
    "bifrost-plugin": "dist/index.js"
  },
  "scripts": {
    "copy-registry": "bun copy-registry.js",
    "build:tsup": "tsup src/index.ts --format esm --dts --clean",
    "build": "npm run build:tsup && npm run copy-registry ",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "bifrost",
    "plugin",
    "cli"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "8an3",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^13.2.2",
    "ora": "^8.0.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
